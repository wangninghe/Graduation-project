
@{
    ViewBag.Title = "Eidt";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
@using YAConpay.Models;
@model Collect
<h2 style="text-align:center">修改收入信息</h2>
<form method="post" action="~/Collect/Edit">
    <div>
        <input type="hidden" name="CollectID" id="CollectID" value="@Model.CollectID" />
        <label> 收入金额：</label>
        <input type="text" name="CollectMoney" id="CollectMoney" value="@Model.CollectMoney" class="form-control" />
        <br />
        <label> 收入详情：</label>
        <input type="text" name="CollectDetai" id="CollectDetai" value="@Model.CollectDetai" class="form-control" />
        <br />
        <label> 付款人：</label>
        <input type="text" name="CollectPerson" id="CollectPerson" value="@Model.CollectPerson" class="form-control" />
        <br />
        <label> 联系方式：</label>
        <input type="text" name="CollectPhone" id="CollectPhone" value="@Model.CollectPhone" class="form-control" />
        <br />
        <label> 收入时间：</label>
        <input type="text" name="CollectTime" id="CollectTime" value="@Model.CollectTime" class="form-control" />
        <br />
        <input type="submit" name="" value="添加" class="btn btn-lg btn-primary">
        <a class="btn btn-secondary" href="/Collect/Index">返回</a>
    </div>
</form>