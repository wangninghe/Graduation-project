
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
@using YAConpay.Models;
@{
    List<Warehouse> wlist = ViewBag.wh;
}
<h2 style="text-align:center">添加出货信息</h2>
<form method="post" action="~/Buy/Create">
    <div>
        <label> 货物名称：</label>
        <select name="WarehouseID" class="form-control">
            @foreach (var item in wlist)
            {
                <option value="@item.WarehouseID">@item.WarehouseName</option>
            }
        </select>
        <br />
        <label> 货物数量：</label>
        <input type="text" name="BuyNum" id="BuyNum" placeholder="请输入货物数量" class="form-control" />
        <br />
        <label> 货物类型：</label>
        <input type="text" name="BuyCategory" id="BuyCategory" placeholder="请输入货物类型" class="form-control" />
        <br />
        <label> 货物描述：</label>
        <input type="text" name="BuyDetails" id="BuyDetails" placeholder="请输入货物描述" class="form-control" />
        <label> 进货时间</label>
        <input type="text" name="BuyTime" id="BuyTime" value="@DateTime.Now" class="form-control" />
        <input type="submit" name="" value="添加" class="btn btn-lg btn-primary">
        <a class="btn btn-secondary" href="/Buy/Index">返回</a>
    </div>
</form>